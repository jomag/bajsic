{
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "/opt/node/bin/node",
      "name": "All Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-r",
        "esm",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/src/**/*.test.js"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "/opt/node/bin/node",
      "name": "Current File",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": ["-r", "esm", "--timeout", "999999", "--colors", "${file}"],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
